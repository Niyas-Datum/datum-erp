{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@org/architecture": ["libs/architecture/src/index.ts"],
      "coreApp/Module": ["apps/coreApp/src/app/remote-entry/entry-module.ts"],
      "generalApp/Module": [
        "apps/mfe/generalApp/src/app/remote-entry/entry-module.ts"
      ],
      "inventoryApp/Module": [
        "apps/mfe/inventoryApp/src/app/remote-entry/entry-module.ts"
      ],
      "financeApp/Module": [
        "apps/mfe/financeApp/src/app/remote-entry/entry-module.ts"
      ],
      "AuthApp/Module": ["apps/AuthApp/src/app/remote-entry/entry-module.ts"],
      "loginApp/Module": ["apps/loginApp/src/app/remote-entry/entry-module.ts"],
      "@org/http": ["libs/http/src/index.ts"],
      "@org/services": ["libs/services/src/index.ts"],
      "@org/models": ["libs/models/src/index.ts"],
      "@org/ui": ["libs/ui/src/index.ts"],
      "@org/utils": ["libs/utils/src/index.ts"],
      "@org/constants": ["libs/constants/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
